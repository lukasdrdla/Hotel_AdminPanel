@page "/"

<PageTitle>Admin Panel - Hotel Management</PageTitle>

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center" style="background-image: url('/images/hotel-background.jpg'); background-size: cover; background-position: center;">
    <div class="container mt-5 p-4 bg-white rounded shadow-lg">
        <h1 class="text-center mb-4">Hotel Management Dashboard</h1>

        <div class="row">
            <!-- Manage Reservations -->
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Manage Reservations</h5>
                        <p class="card-text">View, create, update, or delete hotel reservations.</p>
                        <a href="/reservations" class="btn btn-primary">Go to Reservations</a>
                    </div>
                </div>
            </div>

            <!-- Manage Guests -->
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Manage Guests</h5>
                        <p class="card-text">View and manage guest information.</p>
                        <a href="/guests" class="btn btn-primary">Go to Guests</a>
                    </div>
                </div>
            </div>

            <!-- Manage Rooms -->
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Manage Rooms</h5>
                        <p class="card-text">View room availability and manage room settings.</p>
                        <a href="/rooms" class="btn btn-primary">Go to Rooms</a>
                    </div>
                </div>
            </div>

            <!-- Manage Staff -->
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Manage Staff</h5>
                        <p class="card-text">Manage hotel staff information and roles.</p>
                        <a href="/staff" class="btn btn-primary">Go to Staff</a>
                    </div>
                </div>
            </div>

            <!-- Reports -->
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Reports</h5>
                        <p class="card-text">Generate and view reports for hotel operations.</p>
                        <a href="/reports" class="btn btn-primary">Go to Reports</a>
                    </div>
                </div>
            </div>

            <!-- Settings -->
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Settings</h5>
                        <p class="card-text">Configure system settings and preferences.</p>
                        <a href="/settings" class="btn btn-primary">Go to Settings</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
