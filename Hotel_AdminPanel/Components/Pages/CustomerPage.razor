@page "/customers"
@inject ICustomerService CustomerService
@inject NavigationManager NavigationManager

@rendermode InteractiveServer

<div class="container mt-5">
    <h3 class="text-center mb-4">Customer List</h3>
    <div class="d-flex justify-content-between mb-3">
        <div></div> <!-- Placeholder for alignment -->
        <button class="btn btn-primary" @onclick="NavigateToAddCustomer">Add Customer</button>
    </div>
    @if (customers == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <p class="mt-2">Loading customers...</p>
        </div>
    }
    else
    {
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Country</th>
                        <th>Postal Code</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in customers)
                    {
                        <tr @onclick="() => NavigateToCustomerDetail(customer.Id)" style="cursor:pointer;">
                            <td>@customer.FirstName</td>
                            <td>@customer.LastName</td>
                            <td>@customer.Email</td>
                            <td>@customer.Phone</td>
                            <td>@customer.Address</td>
                            <td>@customer.City</td>
                            <td>@customer.Country</td>
                            <td>@customer.PostalCode</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Customer> customers;

    protected override async Task OnInitializedAsync()
    {
        customers = await CustomerService.GetCustomersAsync();
    }

    private void NavigateToCustomerDetail(int id)
    {
        NavigationManager.NavigateTo($"/customer/{id}");
    }

    private void NavigateToAddCustomer()
    {
        NavigationManager.NavigateTo("/customer/add");
    }
}
